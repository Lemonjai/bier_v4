<div class="container" style="margin-top:10px;">
  <h1>Beer Review</h1>
  <%= link_to "Add", new_beerpost_path %>
  <div class="row form-group">
    <% @beerposts.each do |beerpost| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">
            <%= image_tag beerpost.image.url, :class => "panel-image-preview" if beerpost %>
          </div>
          <div class="panel-body">
            <h4><%= beerpost.name %></h4>
            <h6>Brewery: <%= beerpost.brewery.name  if beerpost.brewery%></h6>
            <h6>Colour: <%= image_tag beerpost.beercolour.image.thumb.url, :class => "circular" if beerpost.beercolour %> </h6>
            <p><%= link_to "Read More", beerpost %></p>
          </div>
          <div class="panel-footer text-center">
            <a href="#download"><span class="glyphicon glyphicon-download"></span></a>
            <a href="#facebook"><span class="fa fa-facebook"></span></a>
            <a href="#twitter"><span class="fa fa-twitter"></span></a>
            <a href="#share"><span class="glyphicon glyphicon-share-alt"></span></a>
          </div>
          
        </div>
      </div>
    <% end %>
  </div>
</div>