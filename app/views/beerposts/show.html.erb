<p id="notice"><%= notice %></p>

<div id="post_show_content">
  <header>
    <p class="date"><%= @beerpost.created_at.strftime('%A, %B, %d') %></p>
    <h1><%= @beerpost.name %></h1>
    <hr>
  </header>

  <div class="content skinny_wrapper">
    <%= image_tag @beerpost.image.desktop.url.to_s %><br>
    <strong>Colour:</strong><br>
    <%= image_tag @beerpost.beercolour.image.thumb.url.to_s, :class => "circular"  if @beerpost.beercolour %><br>
    <strong>Brewery:</strong><br>
    <%= @beerpost.brewery.name %><br>
    <strong>Type: </strong><br>

  </div>

  <div id="share_box">
      <p><%= link_to "Edit", edit_beerpost_path(@beerpost) %>
    <%= link_to "Delete", beerpost_path(@beerpost), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %></p>

    <hr>

      <p><%= @beerpost.name %></p>
      <!-- Twitter Share -->
      <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @beerpost.name%> by @dod - &amp;url=<%= url_for([@beerpost, {only_path: false}])%>', '_blank','width=800,height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
      <!-- Facebook Share -->
      <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@beerpost, {only_path: false}])%>', '_blank','width=800,height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
      <!-- Google + Share -->
      <a onclick="javascript:window.open('https://www.plus.google.com/share?u=<%= url_for([@beerpost, {only_path: false}])%>', '_blank','width=800,height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
    </div>

    <hr>
</div>
